<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <TextView
            android:id="@+id/history_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masako"
            android:textColor="?android:textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/history_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/history_name"
            app:layout_constraintTop_toBottomOf="@+id/history_name" />

        <TextView
            android:id="@+id/history_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pcs"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/history_quantity"
            app:layout_constraintStart_toEndOf="@+id/history_quantity"
            app:layout_constraintTop_toBottomOf="@+id/history_name" />

        <TextView
            android:id="@+id/history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01-01-2021"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/history_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>