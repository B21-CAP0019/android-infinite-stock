<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.signup.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo_signup"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/header_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_signup"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo_signup"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/value_signup_email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/header_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_background"
            android:hint="@string/hint_email"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            tools:ignore="Autofill" />
        <EditText
            android:id="@+id/value_signup_pass"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/value_signup_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_background"
            android:hint="@string/hint_password"
            android:textSize="18sp"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            tools:ignore="Autofill" />
        <EditText
            android:id="@+id/value_confirmation_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/value_signup_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_background"
            android:hint="@string/hint_confirmation_password"
            android:textSize="18sp"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            tools:ignore="Autofill" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_below="@+id/value_confirmation_password"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/loading"
            app:lottie_loop="true" />
        <ImageButton
            android:id="@+id/btn_signup"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/value_confirmation_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_btn"
            android:src="@drawable/ic_check"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</ScrollView>
